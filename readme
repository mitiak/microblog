# activaet venv environment
$ source venv/bin/activate

# Flask needs to be told how to import it, by setting the FLASK_APP environment variable:
(venv) $ export FLASK_APP=microblog.py

# run flask app
(venv) $ flask run

# all enviroment variables are located and loaded from .flaskenv

# flask db upgrade <heads|hash>
# flask db downgrade <heads|hash>
# flask db current
# flask db heads

# run python interpreter in app context
$ flask shell
