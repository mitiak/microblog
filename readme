# activaet venv environment
$ source venv/bin/activate

# Flask needs to be told how to import it, by setting the FLASK_APP environment variable:
(venv) $ export FLASK_APP=microblog.py

# run flask app
(venv) $ flask run

# all enviroment variables are located and loaded from .flaskenv

# flask db upgrade <heads|hash>
# flask db downgrade <heads|hash>
# flask db current
# flask db heads

# run python interpreter in app context
$ flask shell

# to use full-text search, run elasticsearch docker
docker pull docker.elastic.co/elasticsearch/elasticsearch:7.6.2
docker run -p 9201:9200 -p 9301:9300 -e "discovery.type=single-node" docker.elastic.co/elasticsearch/elasticsearch:7.6.2
